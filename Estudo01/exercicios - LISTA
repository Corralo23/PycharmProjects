L = [5, 7, 2, 9, 4, 1, 3]
print('Lista =  ')
print(f'O tamanho da lista é: ', len(L))
print(f'O maior elemento da lista é: ', max(L))
print(f'O menor elemento da lista é: ', min(L))
print(f'A soma dos elementos da ista é:  ', sum(L))
L.sort()
print(f'Lista em ordem cresente: {L} ')
L.reverse()
print(f'Lista em ordem decrescente: {L} ')

